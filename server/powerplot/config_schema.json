{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "poll_frequency_hours": {
      "type": "number"
    },
    "location": {
      "type": "object",
      "properties": {
        "city": {
          "type": "string"
        },
        "timezone": {
          "type": "string"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        }
      }
    },
    "provider": {
      "type": "object",
      "properties": {
        "provider_name": {
          "type": "string"
        },
        "credentials": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "two_factor_auth_response": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
