[Unit]
Description=[PowerPlot] Poll Power Usage Data from Electricity Provider
After=network.target

[Service]
Type=simple
User=insert_target_user
ExecStart=/home/insert_target_user/.powerplot/server/.venv/bin/python -um powerplot.scraper
Restart=always
RestartSec=1800

[Install]
WantedBy=multi-user.target
